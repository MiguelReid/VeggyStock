<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".NewItem">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="293dp"
        android:layout_height="77dp"
        android:layout_marginTop="50dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#0B0B0B"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/et_provider"
        app:layout_constraintStart_toStartOf="@+id/et_provider"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_provider"
        android:layout_width="296dp"
        android:layout_height="79dp"
        android:layout_marginTop="50dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/provider"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/et_price"
        app:layout_constraintStart_toStartOf="@+id/et_price"
        app:layout_constraintTop_toBottomOf="@+id/et_name" />

    <EditText
        android:id="@+id/et_price"
        android:layout_width="294dp"
        android:layout_height="75dp"
        android:layout_marginTop="50dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/price"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#050505"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/et_street"
        app:layout_constraintStart_toStartOf="@+id/et_street"
        app:layout_constraintTop_toBottomOf="@+id/et_provider" />

    <EditText
        android:id="@+id/et_street"
        android:layout_width="302dp"
        android:layout_height="72dp"
        android:layout_marginTop="50dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/address"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#0B0B0B"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/ratingBar"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="@+id/ratingBar"
        app:layout_constraintTop_toBottomOf="@+id/et_price" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="482dp"
        android:layout_height="54dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/image_button"
        app:layout_constraintStart_toStartOf="@+id/image_button"
        app:layout_constraintTop_toBottomOf="@+id/et_street"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="228dp"
        android:layout_height="85dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#5B9717"
        android:scaleType="fitCenter"
        android:text="@string/save_item"
        android:textColor="#F3ECEC"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/image_button"
        tools:ignore="TextContrastCheck"
        tools:layout_editor_absoluteX="294dp" />

    <ImageButton
        android:id="@+id/image_button"
        android:layout_width="249dp"
        android:layout_height="245dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/green"
        android:contentDescription="@string/productimage"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/btn_save"
        app:layout_constraintStart_toStartOf="@+id/btn_save"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        app:srcCompat="@drawable/nophoto"
        app:tint="#1E8522"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>